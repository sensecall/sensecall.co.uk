<section class="py-4 bg-blue-600 dark:bg-blue-500 text-sm text-blue-100 dark:text-blue-400 overflow-hidden">
    <div class="max-w-full mx-auto">
        <style>
            @keyframes scroll {
                0% { transform: translateX(0); }
                100% { transform: translateX(-50%); }
            }
            .animate-scroll {
                animation: scroll 60s linear infinite;
            }
        </style>
        <div class="flex whitespace-nowrap animate-scroll">
            {% set services = [
                "UX Design", "Web Development", "Digital Strategy", "UI Design",
                "User Research", "Branding", "SEO Optimisation", "Content Strategy",
                "Conversion Rate Optimisation", "Mobile App Design", "E-commerce Solutions",
                "Accessibility Consulting", "Information Architecture", "Wireframing",
                "Prototyping", "Usability Testing", "Digital Marketing", "Analytics & Reporting"
            ] %}
            {% set places = [
                "London", "Manchester", "Birmingham", "Glasgow", "Liverpool",
                "Edinburgh", "Leeds", "Bristol", "Sheffield", "Newcastle",
                "Cardiff", "Belfast", "Nottingham", "Southampton", "Aberdeen"
            ] %}
            {% set combined = [] %}
            {% for i in range(3) %}
                {% for service in services %}
                    {% set randomPlace = places | random %}
                    {% set _ = combined | append(service ~ " in " ~ randomPlace) %}
                {% endfor %}
            {% endfor %}
            <div class="flex space-x-8">
                {% for item in combined %}
                    <span>{{ item }}</span>
                {% endfor %}
            </div>
            <div class="flex space-x-8" aria-hidden="true">
                {% for item in combined %}
                    <span>{{ item }}</span>
                {% endfor %}
            </div>
        </div>
    </div>
</section>


