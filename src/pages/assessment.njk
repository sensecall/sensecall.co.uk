{% block pageScripts %}
    <script>
        // Debug function to check screenshot directory
        async function debugScreenshots(sessionId) {
            try {
                const response = await fetch(`/api/debug-screenshots/${sessionId}`);
                const data = await response.json();
                console.log('Debug Screenshots:', data);
            } catch (error) {
                console.error('Debug Error:', error);
            }
        }

        function pollScreenshots(sessionId) {
            console.log(`Starting to poll screenshots for session: ${sessionId}`);
            const progressBar = document.querySelector('#screenshot-progress');
            const statusText = document.querySelector('#screenshot-status');
            let progress = 0;

            // Update progress bar animation
            function updateProgress(status) {
                if (progress < 90) {
                    progress += 10;
                    progressBar.style.width = `${progress}%`;
                    if (status) {
                        statusText.textContent = status;
                    }
                }
            }

            // Initial debug check
            debugScreenshots(sessionId);
            updateProgress('Starting capture...');

            const interval = setInterval(async () => {
                try {
                    console.log(`Fetching screenshot status for session: ${sessionId}`);
                    const response = await fetch(`/api/screenshot-status/${sessionId}`);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    const data = await response.json();
                    console.log('Poll response:', data);

                    updateProgress(data.message || 'Processing...');

                    if (data.status === 'complete' && data.screenshots?.length > 0) {
                        console.log('Screenshots are complete. Count:', data.screenshots.length);
                        progressBar.style.width = '100%';
                        statusText.textContent = 'Complete!';
                        clearInterval(interval);
                        setTimeout(() => {
                            updateScreenshots(data.screenshots);
                        }, 500);
                    } else {
                        console.log('Screenshots are still processing...', data);
                        await debugScreenshots(sessionId);
                    }
                } catch (error) {
                    console.error('Error polling screenshots:', error);
                    statusText.textContent = 'Error capturing screenshots';
                }
            }, 2000);

            // Store interval ID in case we need to clear it
            window._screenshotInterval = interval;
        }

        function updateScreenshots(screenshots) {
            console.log(`Updating screenshots. Count: ${screenshots.length}`);
            const container = document.querySelector('#screenshots-container');
            if (!container) {
                console.error('Screenshots container not found');
                return;
            }

            // Find the desktop screenshot (largest width)
            const desktopScreenshot = screenshots.reduce((prev, current) => 
                (prev.breakpoint.width > current.breakpoint.width) ? prev : current
            );

            if (!desktopScreenshot) {
                console.error('No desktop screenshot available');
                return;
            }

            console.log('Generating HTML for desktop screenshot');
            const html = `
                <div class="space-y-4">
                    <div class="aspect-video w-full relative rounded-lg overflow-hidden" style="max-height: 320px;">
                        <img src="data:image/jpeg;base64,${desktopScreenshot.image}" 
                             alt="Website Preview" 
                             class="w-full h-full object-cover object-top">
                    </div>
                    <div id="analysis-checklist" class="text-left p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Analysis Progress:</h3>
                        <ul class="space-y-2">
                            <li class="flex items-center space-x-2 text-gray-600 dark:text-gray-400">
                                <span class="checklist-icon">‚è≥</span>
                                <span class="checklist-text">Page source code</span>
                            </li>
                            <li class="flex items-center space-x-2 text-gray-600 dark:text-gray-400">
                                <span class="checklist-icon">‚è≥</span>
                                <span class="checklist-text">Site metadata</span>
                            </li>
                            <li class="flex items-center space-x-2 text-gray-600 dark:text-gray-400">
                                <span class="checklist-icon">‚è≥</span>
                                <span class="checklist-text">Page content (formatted)</span>
                            </li>
                            <li class="flex items-center space-x-2 text-gray-600 dark:text-gray-400">
                                <span class="checklist-icon">‚è≥</span>
                                <span class="checklist-text">Performance analysis</span>
                            </li>
                            <li class="flex items-center space-x-2 text-gray-600 dark:text-gray-400">
                                <span class="checklist-icon">‚è≥</span>
                                <span class="checklist-text">SEO analysis</span>
                            </li>
                        </ul>
                    </div>
                </div>
            `;

            console.log('Setting container innerHTML');
            container.innerHTML = html;

            // Animate the checklist items
            const items = container.querySelectorAll('#analysis-checklist li');
            items.forEach((item, index) => {
                const delay = 500 + (index * 1000); // Sequential delays, starting after 500ms
                setTimeout(() => {
                    const icon = item.querySelector('.checklist-icon');
                    icon.textContent = '‚úÖ';
                    item.classList.add('text-green-600', 'dark:text-green-400');
                }, delay);
            });

            // Update the analysis status
            const analysisStatus = document.querySelector('#analysis-status');
            if (analysisStatus) {
                analysisStatus.innerHTML = `
                    <svg class="w-4 h-4 md:w-5 md:h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-white text-sm font-medium md:text-base">Analysis Complete</span>
                `;
            }
        }

        // Start polling when the page loads if we have a sessionId
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM Content Loaded');
            const container = document.querySelector('#screenshots-container');
            console.log('Container found:', !!container);

            if (container) {
                const sessionId = container.dataset.sessionId;
                console.log('SessionId:', sessionId);

                if (sessionId) {
                    console.log('Starting polling with sessionId:', sessionId);
                    pollScreenshots(sessionId);
                } else {
                    console.error('No sessionId found in container data attribute');
                }
            } else {
                console.error('Screenshots container not found');
            }
        });

        document.getElementById('assessmentForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const form = e.target;
            const formData = new FormData(form);
            
            try {
                const response = await fetch('/api/submit-assessment', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Start polling for status
                    pollScreenshots(data.sessionId);
                } else {
                    console.error('Submission failed:', data.message);
                }
            } catch (error) {
                console.error('Form submission error:', error);
            }
        });
    </script>
{% endblock %}
