{% extends "_includes/layouts/base.njk" %}

{% block content %}
    {# Hero Section - Enhanced Design #}
    <section class="relative bg-white dark:bg-gray-900 pt-16 py-24 overflow-hidden border-b border-gray-200 dark:border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="lg:w-1/2 lg:pr-12">
                    <h1 class="text-5xl md:text-7xl font-black text-gray-900 dark:text-white mb-8 font-sans leading-tight animate-fade-in-up">
                        Real Results. 
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 to-green-600">
                            Real Impact.
                        </span>
                    </h1>
                    <p class="text-2xl md:text-3xl text-slate-600 dark:text-slate-300 font-medium mb-6 animate-fade-in-up delay-100">
                        See how we transform websites from mediocre to magnificent.
                    </p>
                    <p class="text-lg md:text-xl text-slate-600 dark:text-slate-300 mb-10 animate-fade-in-up delay-200">
                        Browse our collection of successful website transformations and see the measurable impact our audits have made for businesses just like yours.
                    </p>
                    <div class="flex flex-wrap gap-4 animate-fade-in-up delay-300">
                        <div class="flex items-center space-x-2">
                            <div class="text-4xl font-bold text-green-500">94%</div>
                            <div class="text-sm text-gray-600 dark:text-slate-300 leading-tight">Average<br>Improvement</div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <div class="text-4xl font-bold text-green-500">3x</div>
                            <div class="text-sm text-gray-600 dark:text-slate-300 leading-tight">Conversion<br>Rate Boost</div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <div class="text-4xl font-bold text-green-500">50+</div>
                            <div class="text-sm text-gray-600 dark:text-slate-300 leading-tight">Happy<br>Clients</div>
                        </div>
                    </div>
                </div>
                <div class="lg:w-1/2 mt-16 lg:mt-0 relative hidden lg:block">
                    <div class="relative">
                        <div class="absolute inset-0 bg-gradient-to-tr from-orange-100/30 to-orange-300/30 dark:from-orange-900/20 dark:to-orange-800/20 rounded-2xl"></div>
                        <img src="/assets/images/before-after-showcase.webp"
                             alt="Website transformation showcase"
                             width="800"
                             height="600"
                             class="w-full animate-float p-8 rounded-2xl dark:hidden">
                        <img src="/assets/images/before-after-showcase-dark.webp"
                             alt="Website transformation showcase"
                             width="800"
                             height="600"
                             class="hidden dark:block w-full animate-float p-8 rounded-2xl">
                    </div>
                </div>
            </div>
        </div>
        {# Optional decorative elements #}
        <div class="absolute top-0 right-0 -translate-y-12 translate-x-12 transform">
            <div class="w-48 h-48 bg-orange-100 dark:bg-orange-900/20 rounded-full filter blur-3xl opacity-50"></div>
        </div>
        <div class="absolute bottom-0 left-0 translate-y-12 -translate-x-12 transform">
            <div class="w-48 h-48 bg-green-100 dark:bg-green-900/20 rounded-full filter blur-3xl opacity-50"></div>
        </div>
    </section>

    {# Example Reviews Section #}
    <section class="py-16 lg:py-24 bg-gray-50 dark:bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            {% set examples = [
                {
                    "name": "E-commerce Fashion Store",
                    "url": "fashionstore.example.com",
                    "before_score": "62",
                    "after_score": "94",
                    "improvements": [
                        "Reduced page load time by 65%",
                        "Increased mobile conversion rate by 43%",
                        "Improved accessibility score to 98/100"
                    ],
                    "image": "/assets/images/example-1.webp",
                    "testimonial": {
                        "quote": "The audit revealed critical issues we hadn't noticed. After implementing the recommendations, our conversion rate improved significantly.",
                        "author": "Emma Thompson",
                        "role": "Digital Director"
                    }
                },
                {
                    "name": "SaaS Platform Dashboard",
                    "url": "saas-platform.example.com",
                    "before_score": "71",
                    "after_score": "96",
                    "improvements": [
                        "Enhanced UI/UX for 32% better user engagement",
                        "Optimised React components for 40% faster rendering",
                        "Implemented accessibility best practices"
                    ],
                    "image": "/assets/images/example-2.webp",
                    "testimonial": {
                        "quote": "The detailed technical analysis helped us identify performance bottlenecks we didn't know existed.",
                        "author": "James Wilson",
                        "role": "CTO"
                    }
                },
                {
                    "name": "Local Restaurant Chain",
                    "url": "restaurant.example.com",
                    "before_score": "45",
                    "after_score": "89",
                    "improvements": [
                        "Mobile-first redesign increased bookings by 56%",
                        "SEO improvements led to 123% more organic traffic",
                        "New booking system reduced abandonment by 34%"
                    ],
                    "image": "/assets/images/example-3.webp",
                    "testimonial": {
                        "quote": "Our online bookings have skyrocketed since implementing the recommended changes.",
                        "author": "Sarah Chen",
                        "role": "Operations Manager"
                    }
                }
            ] %}

            {% for example in examples %}
                <div class="mb-24 bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow duration-300">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
                        <div class="p-8 lg:p-12 flex flex-col justify-between">
                            <div>
                                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{{ example.name }}</h2>
                                <p class="text-gray-600 dark:text-slate-300 mb-6 text-sm">{{ example.url }}</p>
                            
                                <div class="flex items-center space-x-8 mb-8">
                                    <div class="text-center bg-red-50 dark:bg-red-900/20 p-4 rounded-lg shadow-sm">
                                        <div class="text-4xl font-bold text-red-500">{{ example.before_score }}</div>
                                        <div class="text-xs uppercase tracking-wide text-red-600 dark:text-red-300">Before</div>
                                    </div>
                                    <div class="text-2xl text-gray-300">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                                    </div>
                                    <div class="text-center text-green-600 dark:text-green-300 border-2 border-green-500 bg-green-50 dark:bg-green-900/20 p-4 rounded-lg shadow-sm">
                                        <div class="text-4xl font-bold">{{ example.after_score }}</div>
                                        <div class="text-xs uppercase tracking-wide">After</div>
                                    </div>
                                </div>

                                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Key Improvements</h3>
                                <ul class="space-y-3 mb-8">
                                    {% for improvement in example.improvements %}
                                        <li class="flex items-center bg-green-50 dark:bg-green-900/20 p-2 rounded">
                                            <svg class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            <span class="text-gray-700 dark:text-slate-300 text-sm">{{ improvement }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <blockquote class="border-l-4 border-green-500 pl-4 italic mt-auto">
                                <p class="text-gray-600 dark:text-slate-300 mb-2 text-sm">"{{ example.testimonial.quote }}"</p>
                                <footer>
                                    <div class="font-semibold text-gray-900 dark:text-white">{{ example.testimonial.author }}</div>
                                    <div class="text-xs text-gray-600 dark:text-slate-300">{{ example.testimonial.role }}</div>
                                </footer>
                            </blockquote>
                        </div>
                        <div class="bg-gray-100 dark:bg-gray-700 p-8 lg:p-12 flex items-center justify-center">
                            <img src="{{ example.image }}" 
                                 alt="{{ example.name }} website example" 
                                 class="rounded-lg shadow-md w-full max-w-md mx-auto transition-transform duration-300 hover:scale-105"
                                 width="800"
                                 height="600">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    {# CTA Section #}
    <section class="py-16 lg:py-24 border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Ready to improve your website?</h2>
            <p class="text-xl text-gray-600 dark:text-slate-300 mb-8 max-w-2xl mx-auto">
                Get your free website audit today and see how we can help you achieve similar results.
            </p>
            <a href="/" 
               class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-full text-white bg-green-600 hover:bg-green-700 transition-all duration-300">
                Get Your Free Report
            </a>
        </div>
    </section>
{% endblock %} 