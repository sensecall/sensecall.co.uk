{% extends "_includes/layouts/base.njk" %}

{% set title = null %}
{% block content %}
    {# Hero Section - Updated for more impact #}
    <section class="relative bg-white dark:bg-gray-900 pt-16 py-24 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="lg:w-1/2 lg:pr-12">
                    <h1 class="text-5xl md:text-7xl font-black text-gray-900 dark:text-white mb-8 font-sans leading-tight animate-fade-in-up">
                        Your Website <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-300 to-red-600">Probably <span class="underline">Sucks.</span></span>
                    </h1>
                    <p class="text-2xl md:text-3xl text-slate-600 dark:text-slate-300 font-medium mb-6 animate-fade-in-up delay-100">
                        (But we can fix it!)
                    </p>
                    <p class="text-lg md:text-xl text-slate-600 dark:text-slate-300 mb-10 animate-fade-in-up delay-200">
                        Stop losing customers to your competitors. Get a brutally honest assessment of your digital presence, and let us help you fix it (if you want us to).
                    </p>
                    <form id="assessment-form"
                          class="animate-fade-in-up delay-300"
                          action="/assessment"
                          method="get">
                        <div class="relative flex items-center max-w-xl mx-auto">
                            <input type="url"
                                   id="website-url"
                                   name="url"
                                   placeholder="Enter your website URL"
                                   required
                                   class="w-full pl-4 pr-32 py-3 text-lg border-2 border-gray-300 rounded-full focus:outline-none focus:border-green-500 dark:bg-stone-800 dark:border-stone-600 dark:text-white dark:focus:border-green-400 dark:placeholder-stone-400 transition-colors duration-200" autocomplete="on" value="https://uiux.ltd">
                            <label for="website-url" class="sr-only">Your website URL</label>
                            <button type="submit"
                                    class="absolute right-2 inline-flex items-center justify-center px-6 py-2 text-lg font-bold rounded-full text-white bg-green-600 hover:bg-green-700 dark:bg-green-600 dark:hover:bg-green-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-green-500 dark:focus:ring-offset-gray-900 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                                <span>Get Free Report</span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="lg:w-1/2 mt-16 lg:mt-0 relative hidden lg:block">
                    <div class="relative">
                        <div class="absolute inset-0"></div>
                        <img src="/assets/images/something-wrong-4--light.webp"
                             alt="Digital design illustration"
                             width="800"
                             height="600"
                             class="w-full animate-float p-8 rounded-2xl dark:hidden">
                        <img src="/assets/images/something-wrong-4--dark.webp"
                             alt="Digital design illustration"
                             width="800"
                             height="600"
                             class="hidden dark:block w-full animate-float p-8 rounded-2xl">
                    </div>
                </div>
            </div>
        </div>
    </section>
    {# Problems Section - New hard-hitting section #}
    <section class="py-16 lg:py-36 bg-slate-100 dark:bg-slate-800 border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <div class="flex items-center justify-center mb-4">
                    <div class="flex items-center justify-start relative">
                        <svg class="w-6 h-6 absolute -top-2 -left-6 -rotate-12"
                             viewBox="0 0 24 24"
                             fill="none"
                             xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#22C55E" class="dark:fill-green-400" />
                        </svg>
                        <span class="text-5xl font-black text-gray-900 dark:text-white tracking-tight">site<span class="text-green-500 dark:text-green-400 font-extralight">hero</span></span>
                    </div>
                </div>
                <h2 class="text-4xl md:text-5xl font-bold text-slate-800 dark:text-white mb-6 font-sans">
                    The Honest Truth About Your Website
                </h2>
                <p class="text-lg md:text-xl text-slate-900 dark:text-slate-300 mb-10">
                    We'll take a look at your website and give you a brutally honest assessment of what's wrong with it.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% set problems = [
                    {
                        "title": "Performance Issues?",
                        "description": "Slow loading times can frustrate users and impact conversions.",
                        "icon": "‚è±Ô∏è"
                    },
                    {
                        "title": "Outdated Design?",
                        "description": "An outdated look can harm your brand's credibility and user experience.",
                        "icon": "üé®"
                    },
                    {
                        "title": "Missed Opportunities?",
                        "description": "You might be losing potential customers to competitors.",
                        "icon": "üéØ"
                    }
                ] %}
                {% for problem in problems %}
                    <div class="bg-white dark:bg-slate-700 p-8 rounded-lg shadow-md">
                        <div class="text-4xl mb-4">{{ problem.icon }}</div>
                        <h3 class="text-2xl font-semibold text-slate-800 dark:text-white mb-4">{{ problem.title }}</h3>
                        <p class="text-lg text-slate-600 dark:text-slate-300">{{ problem.description }}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center mt-16">
                <h2 class="text-3xl md:text-4xl font-black text-gray-900 dark:text-white mb-6 font-sans">
                    Get Your Free Report Now
                </h2>
                <p class="text-lg md:text-xl text-slate-900 dark:text-slate-300 mb-10">
                    Enter your website URL below to get your free report.
                </p>
                <form id="assessment-form"
                      class="animate-fade-in-up delay-300"
                      action="/assessment"
                      method="get">
                    <div class="relative flex items-center max-w-xl mx-auto">
                        <input type="url"
                               id="website-url"
                               name="url"
                               placeholder="Enter your website URL"
                               required
                               class="w-full pl-4 pr-32 py-3 text-lg border-2 border-gray-300 rounded-full focus:outline-none focus:border-green-500 dark:bg-stone-800 dark:border-stone-600 dark:text-white dark:focus:border-green-400 dark:placeholder-stone-400 transition-colors duration-200">
                        <label for="website-url" class="sr-only">Your website URL</label>
                        <button type="submit"
                                class="absolute right-2 inline-flex items-center justify-center px-6 py-2 text-lg font-bold rounded-full text-white bg-green-600 hover:bg-green-700 dark:bg-green-600 dark:hover:bg-green-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-green-500 dark:focus:ring-offset-gray-900 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                            <span>Get Free Report</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    {# Benefits Section - Updated content #}
    <section class="py-16 lg:py-24 border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-black text-gray-900 dark:text-white mb-6 font-sans">What Your Report Includes</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% set details = [
                    {
                        "title": "UX & Design Audit",
                        "description": "We'll look at your website's design and UX, and give you recommendations on how to improve it.",
                        "icon": "üé®"
                    },
                    {
                        "title": "SEO & Competitor Analysis",
                        "description": "We'll look at your website's SEO and how it compares to your competitors.",
                        "icon": "üîç"
                    },
                    {
                        "title": "Performance Report",
                        "description": "We'll look at your website's performance and give you recommendations on how to improve it.",
                        "icon": "üöÄ"
                    },
                    {
                        "title": "Mobile-Friendly",
                        "description": "We'll check if your website is mobile-friendly and give you recommendations on how to improve it.",
                        "icon": "üì±"
                    },
                    {
                        "title": "Accessibility Report",
                        "description": "We'll check if your website is accessible and give you recommendations on how to improve it.",
                        "icon": "‚ôø"
                    },
                    {
                        "title": "Design & UX Recommendations",
                        "description": "We'll give you ideas for how to improve your website's design and UX.",
                        "icon": "üí°"
                    }
                ] %}
                {% for detail in details %}
                    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
                        <div class="text-6xl mb-4">{{ detail.icon }}</div>
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{{ detail.title }}</h3>
                        <p class="text-gray-600 dark:text-slate-300">{{ detail.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {# Testimonials Section #}
    <section class="py-16 lg:py-24 bg-gray-50 dark:bg-gray-900/50 border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-black text-gray-900 dark:text-white mb-6 font-sans">What Our Clients Say</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {% set testimonials = [
                    {
                        "quote": "The monthly service model has transformed how we approach design. It's like having an in-house team but better.",
                        "author": "Sarah Johnson",
                        "role": "Product Manager, Digital First",
                        "image": "testimonial-1.jpg"
                    },
                    {
                        "quote": "The quality of work and quick turnaround times have exceeded our expectations. Highly recommended.",
                        "author": "Mark Thompson",
                        "role": "CEO, Tech Innovators",
                        "image": "testimonial-2.jpg"
                    }
                ] %}
                {% for testimonial in testimonials %}
                    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-sm">
                        <div class="flex items-center mb-6">
                            <img class="h-12 w-12 rounded-full object-cover"
                                 src="https://thispersondoesnotexist.com/"
                                 alt="{{ testimonial.author }}">
                            <div class="ml-4">
                                <p class="text-lg font-bold text-gray-900 dark:text-white">{{ testimonial.author }}</p>
                                <p class="text-gray-600 dark:text-slate-300">{{ testimonial.role }}</p>
                            </div>
                        </div>
                        <p class="text-gray-600 dark:text-slate-300 text-lg italic">"{{ testimonial.quote }}"</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
