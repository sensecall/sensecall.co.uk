{% extends "_includes/layouts/base.njk" %}

{% set title = null %}
{% block content %}
    {# Hero Section - Simplified for validation #}
    <section class="relative bg-white dark:bg-zinc-900 py-24 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="lg:w-1/2 lg:pr-12">
                    <h1 class="text-4xl lg:text-6xl xl:text-7xl font-black text-gray-900 dark:text-white mb-8 font-sans leading-tight animate-fade-in-up">
                        Your Website Sucks.
                        <br>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-300 to-red-600 underline">(Probably)</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-slate-600 dark:text-zinc-300 mb-10 animate-fade-in-up delay-200">
                        Discover exactly what's holding your website back and get actionable recommendations to improve it.
                    </p>
                    <form id="interest-form"
                          class="animate-fade-in-up delay-300"
                          action="/register-interest"
                          method="post"
                          novalidate
                          aria-label="Website analysis request form">
                        {% if validationErrors %}
                            <div class="mb-4 p-4 bg-red-50 dark:bg-zinc-900/50 border-l-4 border-red-400 rounded-md" role="alert" aria-labelledby="error-summary-title">
                                <h2 id="error-summary-title" class="text-lg font-medium text-red-800 dark:text-red-200">There is a problem</h2>
                                <ul class="mt-2 list-disc list-inside text-sm text-red-700 dark:text-red-300">
                                    {% if validationErrors.email %}
                                        <li><a href="#email" class="underline">{{ validationErrors.email }}</a></li>
                                    {% endif %}
                                    {% if validationErrors.url %}
                                        <li><a href="#website-url" class="underline">{{ validationErrors.url }}</a></li>
                                    {% endif %}
                                    {% if validationErrors.general %}
                                        <li>{{ validationErrors.general }}</li>
                                    {% endif %}
                                </ul>
                            </div>
                        {% endif %}
                        <div class="space-y-4 max-w-xl">
                            <div class="form-group">
                                <label for="email" class="sr-only">Email address</label>
                                <div class="relative">
                                    <input type="email"
                                    value="test@test.com" 
                                           id="email"
                                           name="email"
                                           placeholder="Your email address"
                                           required
                                           aria-required="true"
                                           aria-invalid="{% if validationErrors.email %}true{% else %}false{% endif %}"
                                           aria-describedby="{% if validationErrors.email %}email-error{% endif %}"
                                           class="w-full pl-4 pr-4 py-3 text-lg border-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 dark:bg-zinc-800 dark:text-white transition-colors {% if validationErrors.email %}border-red-500 focus:border-red-500 focus:ring-red-500{% else %}border-gray-300 dark:border-zinc-600{% endif %}"
                                           value="{{ formData.email }}">
                                    {% if validationErrors.email %}
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                                {% if validationErrors.email %}
                                    <p class="mt-2 text-sm text-red-600 dark:text-red-500" id="email-error" role="alert">
                                        {{ validationErrors.email }}
                                    </p>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                <label for="website-url" class="sr-only">Website URL</label>
                                <div class="relative">
                                    <input type="url"
                                           value="https://example.com"
                                           id="website-url"
                                           name="url"
                                           placeholder="Your website URL (e.g., example.com)"
                                           required
                                           aria-required="true"
                                           aria-invalid="{% if validationErrors.url %}true{% else %}false{% endif %}"
                                           aria-describedby="{% if validationErrors.url %}url-error{% endif %}"
                                           class="w-full pl-4 pr-4 py-3 text-lg border-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 dark:bg-zinc-800 dark:text-white transition-colors {% if validationErrors.url %}border-red-500 focus:border-red-500 focus:ring-red-500{% else %}border-gray-300 dark:border-zinc-600{% endif %}"
                                           value="{{ formData.url }}">
                                    {% if validationErrors.url %}
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                                {% if validationErrors.url %}
                                    <p class="mt-2 text-sm text-red-600 dark:text-red-500" id="url-error" role="alert">
                                        {{ validationErrors.url }}
                                    </p>
                                {% endif %}
                            </div>

                            {% if validationErrors.general %}
                                <div class="rounded-md bg-red-50 dark:bg-zinc-900/50 p-4" role="alert">
                                    <div class="flex">
                                        <div class="flex-shrink-0">
                                            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm text-red-700 dark:text-red-200">
                                                {{ validationErrors.general }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            <button type="submit"
                                    class="w-full py-3 text-lg font-bold rounded-lg text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-300">
                                Get your Free Report
                            </button>

                            <p class="text-sm text-slate-500 dark:text-zinc-400 text-center">
                                That's it! No payment required. We'll send your basic report via email.
                            </p>
                        </div>
                    </form>
                    <script>
                        function validateForm() {
                            var urlInput = document.getElementById('website-url');
                            var emailInput = document.getElementById('email');
                            var form = document.getElementById('interest-form');
                            var url = urlInput.value.trim();
                            
                            // Clear any existing error messages
                            clearErrors();
                            
                            // Validate email
                            if (!isValidEmail(emailInput.value)) {
                                showError(emailInput, 'Enter a valid email address');
                                return false;
                            }
                            
                            // Validate and normalise URL
                            if (!url) {
                                showError(urlInput, 'Enter a website URL');
                                return false;
                            }
                            
                            // Normalise URL
                            if (url.indexOf('://') === -1) {
                                url = 'https://' + url;
                            }
                            if (!/^https?:\/\//i.test(url)) {
                                url = 'https://' + url;
                            }
                            
                            // Basic URL validation
                            try {
                                new URL(url);
                            } catch (e) {
                                showError(urlInput, 'Enter a valid website URL');
                                return false;
                            }
                            
                            urlInput.value = url;
                            
                            // Disable form submission button and show loading state
                            const submitButton = form.querySelector('button[type="submit"]');
                            submitButton.disabled = true;
                            submitButton.innerHTML = '<span class="inline-flex items-center"><svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Analysing...</span>';
                            
                            return true;
                        }
                        
                        function isValidEmail(email) {
                            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
                        }
                        
                        function showError(input, message) {
                            const errorDiv = document.createElement('p');
                            errorDiv.className = 'text-red-500 text-sm mt-1';
                            errorDiv.textContent = message;
                            input.classList.add('border-red-500');
                            input.parentNode.appendChild(errorDiv);
                        }
                        
                        function clearErrors() {
                            document.querySelectorAll('.text-red-500').forEach(el => el.remove());
                            document.querySelectorAll('.border-red-500').forEach(el => el.classList.remove('border-red-500'));
                        }
                    </script>
                </div>
                <div class="lg:w-1/2 mt-16 lg:mt-0 relative hidden lg:block">
                    <div class="relative">
                        <div class="absolute inset-0"></div>
                        <img src="/assets/images/something-wrong-4--light.webp"
                             alt="Digital design illustration"
                             width="800"
                             height="600"
                             class="w-full animate-float p-12 rounded-2xl dark:hidden">
                        <img src="/assets/images/something-wrong-4--dark.webp"
                             alt="Digital design illustration"
                             width="800"
                             height="600"
                             class="hidden dark:block w-full animate-float p-12 rounded-2xl">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-16 lg:py-36 bg-slate-100 dark:bg-zinc-800 border-t border-gray-200 dark:border-zinc-600">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <div class="flex items-center justify-center mb-4">
                    <div class="flex items-center justify-start relative">
                        <svg class="w-6 h-6 absolute -top-2 -left-6 -rotate-12"
                             viewBox="0 0 24 24"
                             fill="none"
                             xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#22C55E" class="dark:fill-green-400" />
                        </svg>
                        <span class="text-5xl font-black text-gray-900 dark:text-white tracking-tight">site<span class="text-green-500 dark:text-green-400 font-extralight">hero</span></span>
                    </div>
                </div>
                <h2 class="text-4xl md:text-5xl font-bold text-slate-800 dark:text-white mb-6 font-sans">
                    The Honest Truth About Your Website
                </h2>
                <p class="text-lg md:text-xl text-slate-900 dark:text-slate-300 mb-10">
                    We'll take a look at your website and give you a brutally honest assessment of what's wrong with it.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% set problems = [
