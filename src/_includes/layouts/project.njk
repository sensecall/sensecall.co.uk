---
layout: base.njk
---

<div class="py-8 lg:py-12">
    <div class="max-w-4xl">
        <p class="mb-8 text-sm md:text-base">
            <a href="/projects" class="text-blue-500 hover:text-primary dark:text-blue-400 dark:hover:text-blue-300 inline-flex items-center underline">
                <svg aria-hidden="true" class="w-4 h-4 mr-1 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Back to projects
            </a>
        </p>

        <p class="text-sm md:text-base text-gray-600 dark:text-gray-400 mb-2">
            Case study {{ collections.project | getCollectionIndex(page) }} of {{ collections.project.length }}
        </p>
        <h1 class="text-2xl md:text-5xl mb-4 leading-tight text-dark dark:text-white font-semibold">{{ title }}</h1>
        
        {% if client %}
        <p class="text-sm md:text-base text-gray-700 dark:text-gray-300 mb-4">Client: {{ client }}</p>
        {% endif %}

        <h2 class="sr-only">Services provided:</h2>
        <ul class="flex flex-wrap gap-2 mb-8">
            {% for service in services %}
                <li><span class="inline-block px-2 py-1 text-xs md:text-sm font-medium text-pink-700 dark:text-pink-300 border-2 border-pink-300 dark:border-pink-700 rounded">{{ service }}</span></li>
            {% endfor %}
        </ul>

        <hr class="my-8 border-gray-200 dark:border-gray-800">

        {{ content | safe }}

        <div class="mt-12 flex flex-col md:flex-row justify-between items-start">
            {% set previousPost = collections.project | getPreviousCollectionItem(page) %}
            {% set nextPost = collections.project | getNextCollectionItem(page) %}

            <div class="w-full md:flex-1 mb-4 md:mb-0 mt-8 md:mt-0 order-2 md:order-1">
                {% if previousPost %}
                    <p class="text-sm text-gray-600 dark:text-gray-400"><span class="sr-only">Go to</span> Previous case study</p>
                    <a href="{{ previousPost.url }}" class="text-blue-500 hover:text-primary dark:text-blue-400 dark:hover:text-blue-300 inline-flex items-center underline">
                        <svg aria-hidden="true" class="w-4 h-4 mr-1 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        <span>{{ previousPost.data.title }}</span>
                    </a>
                {% endif %}
            </div>

            <div class="w-full md:flex-1 text-left md:text-right mt-4 md:mt-0 order-1 md:order-2">
                {% if nextPost %}
                    <p class="text-sm text-gray-600 dark:text-gray-400"><span class="sr-only">Go to</span> Next case study</p>
                    <a href="{{ nextPost.url }}" class="text-blue-500 hover:text-primary dark:text-blue-400 dark:hover:text-blue-300 inline-flex items-center md:justify-end underline">
                        <span>{{ nextPost.data.title }}</span>
                        <svg aria-hidden="true" class="w-4 h-4 ml-1 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
