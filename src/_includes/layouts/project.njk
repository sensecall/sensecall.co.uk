---
layout: base.njk
---

<div class="container mx-auto px-4">
    <div class="py-8 lg:py-12">
        <div class="max-w-4xl">
            <p class="mb-8 text-sm md:text-base">
                <a href="/projects" class="text-blue-500 hover:text-primary dark:text-blue-400 dark:hover:text-blue-300">&larr; Back to Projects</a>
            </p>

            <span class="text-sm text-gray-600 dark:text-gray-400">Case study</span>
            <h1 class="text-2xl md:text-5xl mb-4 leading-tight text-dark dark:text-white font-semibold">{{ title }}</h1>
            
            <h2 class="sr-only">Services provided:</h2>
            <ul class="flex flex-wrap gap-2 mb-6">
                {% for service in services %}
                    <li><span class="inline-block px-2 py-1 text-sm font-semibold text-white bg-blue-500 rounded">{{ service }}</span></li>
                {% endfor %}
            </ul>

            {{ content | safe }}

            <div class="mt-12 flex justify-between items-center">
                {% set previousPost = collections.project | getPreviousCollectionItem(page) %}
                {% set nextPost = collections.project | getNextCollectionItem(page) %}

                <div class="flex-1">
                    {% if previousPost %}
                        <p class="text-sm text-gray-600 dark:text-gray-400"><span class="sr-only">Go to</span> Previous case study</p>
                        <a href="{{ previousPost.url }}" class="text-blue-500 hover:text-primary dark:text-blue-400 dark:hover:text-blue-300">
                            &larr; {{ previousPost.data.title }}
                        </a>
                    {% endif %}
                </div>

                <div class="flex-1 text-right">
                    {% if nextPost %}
                        <p class="text-sm text-gray-600 dark:text-gray-400"><span class="sr-only">Go to</span> Next case study</p>
                        <a href="{{ nextPost.url }}" class="text-blue-500 hover:text-primary dark:text-blue-400 dark:hover:text-blue-300">
                            {{ nextPost.data.title }} &rarr;
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
