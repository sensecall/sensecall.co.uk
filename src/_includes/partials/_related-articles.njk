<div class="lg:w-1/3 lg:pl-8 lg:sticky lg:top-8 lg:self-start mt-8 md:mt-0 bg-pink-50 dark:bg-gray-900 p-4 md:p-6 pb-6 md:pb-8 border border-gray-200 dark:border-gray-700 rounded-lg">
    <h2 class="text-2xl md:text-3xl font-serif font-bold mb-4 md:mb-6 text-gray-900 dark:text-white">Read more about UX</h2>
    <ul class="space-y-3 md:space-y-4 text-gray-700 dark:text-slate-200 text-base md:text-lg">
        {% for service in collections.services %}
                <li>
                    <a href="{{ service.url }}"
                       class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 underline visited:text-purple-700 visited:hover:text-purple-800 dark:visited:text-purple-400 dark:visited:hover:text-purple-300">
                        {{ service.data.title }}
                    </a>
                </li>
        {% endfor %}
    </ul>
</div>