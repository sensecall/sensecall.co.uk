{% set articles = [
    {
        "title": "What is UX?",
        "link": "/what-is-ux",
        "linkText": "Learn more about UX"
    },
    {
        "title": "The UX Design Process",
        "link": "/services/ux-design-process",
        "linkText": "Learn more about our UX design process"
    },
    {
        "title": "Interactive Prototyping",
        "link": "/interactive-prototyping",
        "linkText": "Learn more about interactive prototyping"
    },
    {
        "title": "UX Design Tools",
        "link": "/ux-design-tools",
        "linkText": "Explore UX design tools"
    },
    {
        "title": "User Research",
        "link": "/user-research",
        "linkText": "Discover user research techniques"
    },
    {
        "title": "Accessibility",
        "link": "/accessibility",
        "linkText": "Learn about accessibility in UX"
    },
    {
